<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="junction.senseit">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TasksListerActivity" />
        <activity android:name=".TaskManager" />
        <activity android:name=".TaskListItem" />
    </application>
    <service
        android:name="com.android.yourpackagename.TimerService"
        android:process=":TimerService" >
    </service>

</manifest>